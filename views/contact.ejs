<script type="text/javascript">
  document.getElementById("submit").onclick = function popalert() {
    var nameentered = document.getElementById("name").value;
    var mailentered = document.getElementById("email").value;

    if (document.getElementById("name").value.length == 0) {
      alert("Please enter your name");
    } else if (document.getElementById("email").value.length == 0) {
      alert("Enter a valid Email!");
    } else if (document.getElementById("inquiry").value.length == 0) {
      alert("Please enter your Inquiry or Comment");
    } else if (document.getElementById("num").value.length != 12) {
      alert("Please enter your number with country code");
    } else {
      alert("Thank you " + nameentered + "!" + "  We will inform about your inquiry via " + mailentered);
    }
  }
</script>


